<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <EditText
        android:id="@+id/email_reset_id"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:hint="Enter registered email id"
        android:textColor="#000"
        android:textSize="15sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_name_reset_id"
        android:hint="Enter new user name"
        android:layout_below="@+id/email_reset_id"
        android:textColor="#000"
        android:textSize="15sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_password_reset_id"
        android:inputType="textPassword"
        android:hint="Enter new password"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_below="@+id/new_name_reset_id"/>

</RelativeLayout>